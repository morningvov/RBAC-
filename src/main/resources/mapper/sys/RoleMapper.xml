<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.warehouse.sys.mapper.RoleMapper">

    <!--
    根据角色ID删除sys_role_permission
      void deleteRolePermissionByRid(Serializable id);
    -->
    <delete id="deleteRolePermissionByRid">
        delete from sys_role_permission where rid=#{id}
    </delete>

    <!--
    根据角色ID删除sys_role_user
      void deleteRoleUserByRid(Serializable id);
    -->
    <delete id="deleteRoleUserByRid">
        delete from sys_role_user where rid=#{id}
    </delete>

    <!--根据角色ID查询当前角色拥有的权限或菜单ID-->
    <select id="queryRolePermissionIdsByRid" resultType="integer">
        select pid from sys_role_permission where rid=#{roleId}
    </select>


    <!--保存角色和菜单权限之间的关系-->
    <insert id="saveRolePermission">
        insert into sys_role_permission(rid, pid) values (#{rid},#{pid})
    </insert>


    <!--查询当前用户拥有的角色ID集合-->
    <select id="queryUserRoleIdsByUid" resultType="integer">
        select rid from sys_role_user where uid=#{uid}
    </select>
</mapper>
